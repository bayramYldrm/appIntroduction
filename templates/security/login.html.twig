{% block body %}
    <div class="d-flex align-items-center justify-content-center min-vh-100">
        <div class="container mt-5">
            <div class="card">
                <div class="header">
                    <h3>Giriş Yap</h3>
                </div>
                <div class="body">
                    <form action="{{ path('login') }}" method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                Zaten giriş yaptınız: {{ app.user.username }}, <a href="{{ path('app_logout') }}">Çıkış Yap</a>
                            </div>
                        {% endif %}

                        <div class="form-group">
                            <label for="email">E-posta:</label>
                            <div class="input-group">
                                <input type="email" id="email" name="_username" class="form-control" required>
                                <span class="input-group-text">
                                    <i class="bi bi-envelope"></i>
                                </span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="password">Şifre:</label>
                            <div class="input-group">
                                <input type="password" id="password" name="_password" class="form-control" required>
                                <span class="input-group-text" id="togglePassword">
                                    <i class="bi bi-eye"></i>
                                </span>
                            </div>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="button-group">
                            <button type="submit" class="btn btn-primary">Giriş Yap</button>
                            <a href="{{ path('app_user_new') }}" class="btn btn-secondary">Kayıt Ol</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background-color: #f4f9fc;
            color: #333;
            margin: 0;
            padding: 0;
            font-family: 'Source Sans Pro', sans-serif;
        }

        .d-flex {
            display: flex;
        }

        .align-items-center {
            align-items: center;
        }

        .justify-content-center {
            justify-content: center;
        }

        .min-vh-100 {
            min-height: 100vh;
        }

        .container {
            margin: 0;
            width: 100%;
        }

        .card {
            width: 400px;
            background-color: #ffffff;
            color: #000000;
            margin: 20px auto;
            border-radius: 10px;
            box-shadow: 0 6px 12px 0 rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .header {
            height: 80px;
            width: 100%;
            background-image: linear-gradient(to right, #004d40, #006400);
            border-bottom: 5px solid #003300;
            padding: 10px;
            box-sizing: border-box;
            color: #ffffff;
            text-align: center;
        }

        .header h3 {
            color: #ffffff;
            font-size: 24px;
            font-weight: 600;
            margin: 5px 0;
        }

        .body {
            padding: 15px;
            background-color: #f9f9f9;
            color: #000000;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .input-group {
            display: flex;
            align-items: center;
        }

        .form-control {
            background-color: #ffffff;
            color: #000000;
            border: 1px solid #ccc;
            border-radius: 4px;
            padding: 8px;
            box-sizing: border-box;
            flex: 1;
        }

        .input-group-text {
            background-color: transparent;
            border: none;
            cursor: pointer;
            padding: 0 10px;
        }

        .btn-primary {
            background-color: #007bff;
            border: 1px solid #007bff;
            color: #ffffff;
            border-radius: 4px;
            padding: 8px 15px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: background-color .3s ease, border-color .3s ease;
            display: inline-block;
            text-align: center;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

        .btn-secondary {
            background-color: #6c757d;
            border: 1px solid #6c757d;
            color: #ffffff;
            border-radius: 4px;
            padding: 8px 15px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: background-color .3s ease, border-color .3s ease;
            display: inline-block;
            text-align: center;
        }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

        .button-group {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }
    </style>
{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var togglePassword = document.querySelector('#togglePassword');
            var passwordInput = document.querySelector('#password');
            var eyeIcon = togglePassword.querySelector('i');

            togglePassword.addEventListener('click', function() {
                var type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                passwordInput.setAttribute('type', type);
                eyeIcon.classList.toggle('bi-eye');
                eyeIcon.classList.toggle('bi-eye-slash');
            });
        });
    </script>
{% endblock %}
