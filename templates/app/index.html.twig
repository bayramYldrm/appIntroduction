{% extends 'base.html.twig' %}

{% block title %}App{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">App</h1>
        <style>
            .table thead th {
                background-color: #004d40;
                color: white;
                text-align: center;
            }

            .table tbody tr:hover {
                background-color: #e0f2f1;
            }

            .btn {
                border-radius: 0.25rem;
            }

            .btn-primary {
                background-color: #007bff;
                border-color: #007bff;
                color: white;
            }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

            .table-responsive {
                overflow-x: auto;
            }

            .img-thumbnail {
                max-width: 100px;
            }

            .btn-sm {
                font-size: 0.875rem;
                padding: 0.25rem 0.5rem;
            }

            .table td, .table th {
                font-size: 0.875rem;
                word-wrap: break-word;
            }

            .table td a {
                display: block;
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: nowrap;
            }
        </style>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">İsim</th>
                    <th scope="col">Açıklama</th>
                    <th scope="col">iOS Link</th>
                    <th scope="col">Windows Link</th>
                    <th scope="col">Play Store Link</th>
                    <th scope="col">Resim</th>
                    <th scope="col">Aksiyonlar</th>
                </tr>
                </thead>
                <tbody>
                {% for app in apps %}
                    <tr>
                        <td>{{ app.id }}</td>
                        <td>{{ app.name }}</td>
                        <td>{{ app.description }}</td>
                        <td><a href="{{ app.iosLink }}" target="_blank">{{ app.iosLink }}</a></td>
                        <td><a href="{{ app.windowsLink }}" target="_blank">{{ app.windowsLink }}</a></td>
                        <td><a href="{{ app.playStoreLink }}" target="_blank">{{ app.playStoreLink }}</a></td>
                        <td><img src="{{ app.image }}" class="img-thumbnail" alt="{{ app.name }}"></td>
                        <td>
                            <a href="{{ path('app_app_show', {'id': app.id}) }}" class="btn btn-info btn-sm">
                                <i class="bi bi-eye"></i> Göster
                            </a>
                            <a href="{{ path('app_app_edit', {'id': app.id}) }}" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil"></i> Düzenle
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8" class="text-center">Kayıt Bulunamadı</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <a href="{{ path('app_app_new') }}" class="btn btn-primary mt-4">
            <i class="bi bi-plus-circle"></i> Yeni Ekle
        </a>
    </div>
{% endblock %}
