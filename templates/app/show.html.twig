{% extends 'base.html.twig' %}

{% block title %}App{% endblock %}

{% block body %}
    <h1>App</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ app.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ app.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ app.description }}</td>
            </tr>
            <tr>
                <th>AndroidLink</th>
                <td>{{ app.androidLink }}</td>
            </tr>
            <tr>
                <th>IosLink</th>
                <td>{{ app.iosLink }}</td>
            </tr>
            <tr>
                <th>WindowsLink</th>
                <td>{{ app.windowsLink }}</td>
            </tr>
            <tr>
                <th>PlayStoreLink</th>
                <td>{{ app.playStoreLink }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ app.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_app_index') }}">back to list</a>

