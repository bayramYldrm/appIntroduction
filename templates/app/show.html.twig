{% extends 'base.html.twig' %}

{% block title %}Uygulama{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Uygulama Detayları</h1>

        <!-- Detay Tablosu -->
        <table class="table table-bordered table-striped">
            <tbody>
            <tr>
                <th>ID</th>
                <td>{{ app.id }}</td>
            </tr>
            <tr>
                <th>İsim</th>
                <td>{{ app.name }}</td>
            </tr>
            <tr>
                <th>Açıklama</th>
                <td>{{ app.description }}</td>
            </tr>
            <tr>
                <th>Android Linki</th>
                <td><a href="{{ app.androidLink }}" target="_blank">{{ app.androidLink }}</a></td>
            </tr>
            <tr>
                <th>iOS Linki</th>
                <td><a href="{{ app.iosLink }}" target="_blank">{{ app.iosLink }}</a></td>
            </tr>
            <tr>
                <th>Windows Linki</th>
                <td><a href="{{ app.windowsLink }}" target="_blank">{{ app.windowsLink }}</a></td>
            </tr>
            <tr>
                <th>Play Store Linki</th>
                <td><a href="{{ app.playStoreLink }}" target="_blank">{{ app.playStoreLink }}</a></td>
            </tr>
            <tr>
                <th>Resim</th>
                <td><img src="{{ app.image }}" class="img-thumbnail" alt="{{ app.name }}"></td>
            </tr>
            </tbody>
        </table>

        <!-- Geri Dönme ve Düzenleme Bağlantıları -->
        <a href="{{ path('app_app_index') }}" class="btn btn-secondary mt-3">
            <i class="bi bi-arrow-left"></i> Listeye Geri Dön
        </a>

        <a href="{{ path('app_app_edit', {'id': app.id}) }}" class="btn btn-warning mt-3">
            <i class="bi bi-pencil"></i> Düzenle
        </a>

        <!-- Silme Formu -->
        {{ include('app/_delete_form.html.twig') }}
    </div>

    <style>
        .table th {
            background-color: #004d40;
            color: white;
            text-align: center;
        }

        .table tbody tr:hover {
            background-color: #e0f2f1;
        }

        .btn {
            border-radius: 0.25rem; /* Buton kenar köşe yuvarlama */
        }

        .btn-secondary {
            background-color: #6c757d; /* Gri renk */
            border-color: #6c757d; /* Kenar rengi */
            color: white; /* Yazı rengi */
        }

        .btn-secondary:hover {
            background-color: #5a6268; /* Hover durumunda koyu gri */
            border-color: #545b62; /* Hover kenar rengi */
        }

        .btn-warning {
            background-color: #ffc107; /* Sarı renk */
            border-color: #ffc107; /* Kenar rengi */
            color: black; /* Yazı rengi */
        }

        .btn-warning:hover {
            background-color: #e0a800; /* Hover durumunda koyu sarı */
            border-color: #d39e00; /* Hover kenar rengi */
        }

        .btn-sm {
            font-size: 0.875rem; /* Küçük buton font boyutu */
            padding: 0.25rem 0.5rem; /* Buton padding */
        }

        .btn i {
            margin-right: 0.5rem; /* İkon ve metin arasında boşluk */
        }

        .img-thumbnail {
            max-width: 150px; /* Resim genişliğini ayarlama */
        }
    </style>
{% endblock %}
