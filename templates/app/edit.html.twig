{% extends 'base.html.twig' %}

{% block title %}Uygulamayı Düzenle{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Uygulamayı Düzenle</h1>

        <!-- Formu dahil et -->
        {{ include('app/_form.html.twig', {'button_label': 'Bilgiler'}) }}

        <!-- Geri dönme bağlantısı -->
        <a href="{{ path('app_app_index') }}" class="btn btn-secondary mt-3">
            <i class="bi bi-arrow-left"></i> Listeye Geri Dön
        </a>

        <!-- Silme formu -->
        {{ include('app/_delete_form.html.twig') }}
    </div>

    <style>
        /* Genel Stil */
        body {
            background-color: #f4f7f8; /* Hafif gri arka plan */
            color: #333; /* Koyu metin rengi */
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; /* Modern yazı tipi */
        }

        .container {
            background: white; /* Beyaz arka plan */
            border-radius: 8px; /* Köşe yuvarlama */
            box-shadow: 0 4px 8px rgba(0,0,0,0.1); /* Hafif gölge */
            padding: 2rem; /* İç boşluk */
        }

        h1 {
            color: black; /* Mavi başlık rengi */
        }

        .btn {
            border-radius: 0.5rem; /* Buton köşe yuvarlama */
            padding: 0.5rem 1rem; /* Buton iç boşluk */
            font-size: 1rem; /* Buton yazı boyutu */
            transition: background-color 0.3s, border-color 0.3s; /* Geçiş efektleri */
        }

        .btn-secondary {
            background-color: #6c757d; /* Gri buton rengi */
            border-color: #6c757d; /* Gri kenar rengi */
            color: white; /* Beyaz yazı rengi */
        }

        .btn-secondary:hover {
            background-color: #5a6268; /* Hover durumunda koyu gri */
            border-color: #545b62; /* Hover kenar rengi */
        }

        .btn-warning {
            background-color: #ffc107; /* Sarı buton rengi */
            border-color: #ffc107; /* Sarı kenar rengi */
            color: black; /* Siyah yazı rengi */
        }

        .btn-warning:hover {
            background-color: #e0a800; /* Hover durumunda koyu sarı */
            border-color: #d39e00; /* Hover kenar rengi */
        }

        .btn i {
            margin-right: 0.5rem; /* İkon ve metin arasında boşluk */
        }

        .table {
            border-collapse: separate; /* Hücre kenar boşlukları */
            border-spacing: 0; /* Hücreler arası boşluk */
        }

        .table thead th {
            background-color: #007bff; /* Başlık arka plan rengi */
            color: white; /* Başlık yazı rengi */
            text-align: center; /* Başlık metin hizalaması */
            padding: 1rem; /* Başlık hücre içi boşluk */
        }

        .table tbody tr {
            transition: background-color 0.3s; /* Satır arka plan geçiş efekti */
        }

        .table tbody tr:hover {
            background-color: #e9ecef; /* Hover durumunda açık gri arka plan */
        }

        .table td {
            vertical-align: middle; /* Hücre içi dikey hizalama */
            padding: 1rem; /* Hücre içi boşluk */
        }
    </style>
{% endblock %}
