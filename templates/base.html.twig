<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Web Sayfası</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
            background-color: #f1f1f1;
        }

        .navbar {
            background-color: #004d40; /* Koyu yeşil */
            color: white;
        }

        .navbar a {
            color: white;
        }

        .sidebar {
            width: 250px;
            background-color: #00695c; /* Yeşil ton */
            color: white;
            padding: 15px;
            flex-shrink: 0;
            position: fixed;
            top: 56px; /* Navbar yüksekliği */
            bottom: 0;
            overflow-y: auto;
            transition: transform 0.3s ease;
        }

        .sidebar.closed {
            transform: translateX(-250px);
        }

        .sidebar h4 {
            text-transform: uppercase;
            font-size: 1.2rem;
            border-bottom: 2px solid #004d40;
            padding-bottom: 10px;
            margin-bottom: 15px;
        }

        .sidebar a {
            color: white;
            text-decoration: none;
            display: block;
            padding: 10px 15px;
            border-radius: 4px;
            font-size: 0.95rem;
        }

        .sidebar a:hover {
            background-color: #004d40;
        }

        .content {
            margin-left: 250px;
            padding: 20px;
            flex-grow: 1;
            background-color: #ffffff; /* Beyaz arka plan */
            color: #333333; /* Metin rengi */
            transition: margin-left 0.3s ease;
        }

        .content.shifted {
            margin-left: 0;
        }

        .footer {
            background-color: #004d40; /* Koyu yeşil */
            color: white;
            text-align: center;
            padding: 20px 10px;
            margin-top: auto;
        }

        .footer .social-icons a {
            color: white;
            font-size: 1.2rem;
            margin: 0 10px;
        }

        .sidebar .home-section {
            margin-top: 30px;
        }

        .sidebar .home-section h4 {
            font-size: 1.1rem;
        }

        .sidebar-toggle {
            position: fixed;
            top: 15px;
            left: 15px;
            z-index: 1000;
            cursor: pointer;
            font-size: 1.5rem;
            color: #004d40;
        }
    </style>
</head>
<body>
<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark">
    <div class="sidebar-toggle">
    <div class="logo">
        <img src="/uploads/images/LOGO1.png" alt="Logo" style="width: 150px; height: 50px;">
    </div>
    </div>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" href="#">Anasayfa</a>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="userMenu" role="button" data-toggle="dropdown"
                   aria-haspopup="true" aria-expanded="false">
                    Kullanıcı İşlemleri
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userMenu">
                    <a class="dropdown-item" href="#">Profilim</a>
                    <a class="dropdown-item" href="#">Ayarlar</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="#">Çıkış Yap</a>
                </div>
            </li>
        </ul>
    </div>
</nav>

<!-- Sidebar Toggle Button -->


<!-- Sidebar -->
<div class="sidebar">
    <h4>Menü</h4>

    <!-- Home Section -->
    <div class="home-section">
        <h4><i class="bi bi-house-door"></i> Home İşlemleri</h4>
        <a href="{{ path('app_home_index') }}"><i class="bi bi-list"></i> Tüm Home Kayıtları</a>
        <a href="{{ path('app_home_new') }}"><i class="bi bi-plus-circle"></i> Yeni Home Ekle</a>
    </div>
    <br>
    <!-- App Section -->
    <div class="app-section">
        <h4><i class="bi bi-gear"></i> App İşlemleri</h4>
        <a href="{{ path('app_app_index') }}"><i class="bi bi-list"></i> Tüm App Kayıtları</a>
        <a href="{{ path('app_app_new') }}"><i class="bi bi-plus-circle"></i> Yeni App Ekle</a>
    </div>
    <br>
    <!-- User Section -->
    <div class="user-section">
        <h4><i class="bi bi-person"></i> User İşlemleri</h4>
        <a href="{{ path('app_user_index') }}"><i class="bi bi-list"></i> Tüm User Kayıtları</a>
        <a href="{{ path('app_user_new') }}"><i class="bi bi-plus-circle"></i> Yeni User Ekle</a>
    </div>
</div>

<!-- Main Content -->
<div class="content">
    {% block body %}{% endblock %}
</div>

<!-- Footer -->
<footer class="footer">
    <p>&copy; 2024 Şirket Adı. Tüm hakları saklıdır.</p>
    <div class="social-icons">
        <a href="#"><i class="fab fa-facebook-f"></i></a>
        <a href="#"><i class="fab fa-twitter"></i></a>
        <a href="#"><i class="fab fa-instagram"></i></a>
    </div>
</footer>

<!-- JavaScript -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const sidebar = document.querySelector('.sidebar');
        const content = document.querySelector('.content');
        const toggleButton = document.querySelector('.sidebar-toggle');

        toggleButton.addEventListener('click', function () {
            sidebar.classList.toggle('closed');
            content.classList.toggle('shifted');
        });
    });
</script>
</body>
</html>
