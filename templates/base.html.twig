<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Web Sayfası</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .section {
            margin-bottom: 15px;
        }

        .toggle-btn {
            width: 100%;
            background-color: #34495e;
            color: #ecf0f1;
            border: none;
            padding: 10px;
            text-align: left;
            font-size: 1.1em;
            border-radius: 5px;
            cursor: pointer;
            display: flex;
            align-items: center;
        }

        .toggle-btn i {
            margin-right: 10px;
        }

        .toggle-btn:hover {
            background-color: #3b5998;
        }

        .section-content {
            display: none;
            margin-top: 10px;
            padding-left: 20px;
        }

        .section-content a {
            display: block;
            padding: 5px 0;
            color: #bdc3c7;
            text-decoration: none;
            font-size: 0.9em;
            transition: color 0.2s;
        }

        .section-content a:hover {
            color: #ffffff;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
            background-color: #f1f1f1;
        }

        .navbar {
            background-color: #004d40; /* Koyu yeşil */
            color: white;
        }

        .navbar a {
            color: white;
        }

        .sidebar {
            width: 250px;
            background-color: #00695c; /* Yeşil ton */
            color: white;
            padding: 15px;
            flex-shrink: 0;
            position: fixed;
            top: 56px; /* Navbar yüksekliği */
            bottom: 0;
            overflow-y: auto;
            transition: transform 0.3s ease;
        }

        .sidebar.closed {
            transform: translateX(-250px);
        }

        .sidebar h4 {
            text-transform: uppercase;
            font-size: 1.2rem;
            border-bottom: 2px solid #004d40;
            padding-bottom: 10px;
            margin-bottom: 15px;
        }

        .sidebar a {
            color: white;
            text-decoration: none;
            display: block;
            padding: 10px 15px;
            border-radius: 4px;
            font-size: 0.95rem;
        }

        .sidebar a:hover {
            background-color: #004d40;
        }

        .content {
            margin-left: 250px;
            padding: 20px;
            flex-grow: 1;
            background-color: #ffffff; /* Beyaz arka plan */
            color: #333333; /* Metin rengi */
            transition: margin-left 0.3s ease;
        }

        .content.shifted {
            margin-left: 0;
        }

        .footer {
            background-color: #004d40; /* Koyu yeşil */
            color: white;
            text-align: center;
            padding: 20px 10px;
            margin-top: auto;
        }

        .footer .social-icons a {
            color: white;
            font-size: 1.2rem;
            margin: 0 10px;
        }

        .sidebar .home-section {
            margin-top: 30px;
        }

        .sidebar .home-section h4 {
            font-size: 1.1rem;
        }

        .sidebar .user-section {
            margin-top: 30px;
        }

        .sidebar .user-section h4 {
            font-size: 1.1rem;
        }

        .sidebar-toggle {
            position: fixed;
            top: 15px;
            left: 15px;
            z-index: 1000;
            cursor: pointer;
            font-size: 1.5rem;
            color: #004d40;
        }
    </style>
</head>
<body>
<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark">
    <div class="sidebar-toggle">
        <div class="logo">
            <img src="/uploads/images/LOGO1.png" alt="Logo" style="width: 150px; height: 50px;">
        </div>
    </div>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="#"> Hoşgeldin </a>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="userMenu" role="button" data-toggle="dropdown"
                       aria-haspopup="true" aria-expanded="false">
                        Kullanıcı İşlemleri
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userMenu" style="background-color: #004d40;">
                        <a class="dropdown-item" href="{{ path('logout') }}">Çıkış Yap</a>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- Sidebar -->
<div class="sidebar">
    <h4 class="sidebar-title">Menü</h4>

    <!-- Home Section -->
    <div class="section">
        <button class="toggle-btn" onclick="toggleSection('home-section')">
            <i class="bi bi-house-door"></i> Ana Sayfa İşlemleri
        </button>
        <div class="section-content" id="home-section">
            <a href="{{ path('app_home_index') }}"><i class="bi bi-list"></i> Tüm Ana Sayfa Kayıtları</a>
            <a href="{{ path('app_home_new') }}"><i class="bi bi-plus-circle"></i> Yeni Ana Sayfa Ekle</a>
        </div>
    </div>

    <!-- App Section -->
    <div class="section">
        <button class="toggle-btn" onclick="toggleSection('app-section')">
            <i class="bi bi-gear"></i> App İşlemleri
        </button>
        <div class="section-content" id="app-section">
            <a href="{{ path('app_app_index') }}"><i class="bi bi-list"></i> Tüm App Kayıtları</a>
            <a href="{{ path('app_app_new') }}"><i class="bi bi-plus-circle"></i> Yeni App Ekle</a>
        </div>
    </div>

    <!-- User Section -->
    <div class="section">
        <button class="toggle-btn" onclick="toggleSection('user-section')">
            <i class="bi bi-person"></i> Kullanıcı İşlemleri
        </button>
        <div class="section-content" id="user-section">
            <a href="{{ path('app_user_index') }}"><i class="bi bi-list"></i> Tüm Kullanıcı Kayıtları</a>
            <a href="{{ path('app_user_new') }}"><i class="bi bi-plus-circle"></i> Yeni Kullanıcı Ekle</a>
        </div>
    </div>

    <!-- About Us Section -->
    <div class="section">
        <button class="toggle-btn" onclick="toggleSection('about-us-section')">
            <i class="bi bi-info-circle"></i> Hakkımızda İşlemleri
        </button>
        <div class="section-content" id="about-us-section">
            <a href="{{ path('app_about_us_index') }}"><i class="bi bi-list"></i> Tüm Hakkımızda Kayıtları</a>
            <a href="{{ path('app_about_us_new') }}"><i class="bi bi-plus-circle"></i> Yeni Hakkımızda Ekle</a>
        </div>
    </div>
</div>


<!-- Main Content -->
<div class="content">
    {% block body %}{% endblock %}
</div>

<!-- Footer -->
<footer class="footer">
    <p>&copy; 2024 Şirket Adı. Tüm hakları saklıdır.</p>
    <div class="social-icons">
        <a href="#"><i class="fab fa-facebook-f"></i></a>
        <a href="#"><i class="fab fa-twitter"></i></a>
        <a href="#"><i class="fab fa-instagram"></i></a>
    </div>
</footer>

<!-- JavaScript -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const sidebar = document.querySelector('.sidebar');
        const content = document.querySelector('.content');
        const toggleButton = document.querySelector('.sidebar-toggle');

        toggleButton.addEventListener('click', function () {
            sidebar.classList.toggle('closed');
            content.classList.toggle('shifted');
        });
    });
</script>
<script>
    function toggleSection(sectionId) {
        const section = document.getElementById(sectionId);
        if (section.style.display === "none" || section.style.display === "") {
            section.style.display = "block";
        } else {
            section.style.display = "none";
        }
    }
</script>
</body>
</html>
