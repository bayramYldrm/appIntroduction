{% extends 'base.html.twig' %}

{% block title %}Yeni Kullanıcı Oluştur{% endblock %}

{% block body %}
    <div class="content mt-4">
        <h1 class="mb-4">Yeni Kullanıcı Oluştur</h1>

        <!-- Formu dahil et -->
        <div class="form-container mb-4">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button class="btn btn-primary custom-submit-btn">{{ button_label|default('Kaydet') }}</button>
            {{ form_end(form) }}
        </div>

        <!-- Geri dönme linki -->
        <a href="{{ path('app_user_index') }}" class="btn btn-secondary mt-3">
            <i class="bi bi-arrow-left"></i> Listeye Geri Dön
        </a>
    </div>

    <!-- Inline CSS -->
    <style>
        /* Genel Stil */
        body {
            background-color: #e9ecef; /* Hafif gri arka plan */
            color: #495057; /* Koyu metin rengi */
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; /* Modern yazı tipi */
        }

        .content {
            padding: 2rem; /* İç boşluk */
        }

        h1 {
            font-size: 1.75rem; /* Başlık boyutu */
            font-weight: bold; /* Kalın yazı */
            margin-bottom: 1.5rem; /* Alt boşluk */
            color: #343a40; /* Başlık rengi */
        }

        .form-container {
            margin-bottom: 1.5rem; /* Form ve geri dönme bağlantısı arasında boşluk */
            max-width: 600px; /* Maksimum genişlik */
            background-color: white; /* Beyaz arka plan */
            padding: 2rem; /* İç boşluk */
            border-radius: 0.5rem; /* Köşe yuvarlama */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Hafif gölge */
        }

        .btn {
            border-radius: 0.25rem; /* Buton kenar köşe yuvarlama */
            padding: 0.5rem 1rem; /* Buton iç boşluk */
            font-size: 1rem; /* Buton yazı boyutu */
            transition: background-color 0.3s, border-color 0.3s; /* Geçiş efektleri */
        }

        .btn-primary {
            background-color: #007bff; /* Mavi arka plan */
            color: white; /* Beyaz yazı rengi */
            border: none; /* Kenarlık yok */
        }

        .btn-primary:hover {
            background-color: #0056b3; /* Hover durumunda koyu mavi */
        }

        .btn-secondary {
            background-color: #6c757d; /* Gri buton rengi */
            border-color: #6c757d; /* Gri kenar rengi */
            color: white; /* Beyaz yazı rengi */
        }

        .btn-secondary:hover {
            background-color: #5a6268; /* Hover durumunda koyu gri */
            border-color: #545b62; /* Hover kenar rengi */
        }

        .mt-4 {
            margin-top: 1.5rem; /* Üst boşluk */
        }

        .mb-4 {
            margin-bottom: 1.5rem; /* Alt boşluk */
        }
    </style>
{% endblock %}
