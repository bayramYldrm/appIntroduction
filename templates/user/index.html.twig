{% extends 'base.html.twig' %}

{% block title %}Kullanıcı Listesi{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Kullanıcı Listesi</h1>

        <!-- Kullanıcı tablosu -->
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Kullanıcı Adı</th>
                <th>Şifre</th>
                <th>İşlemler</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.userName }}</td>
                    <td>{{ user.password }}</td>
                    <td>
                        <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-info btn-sm">
                            <i class="bi bi-eye"></i> Görüntüle
                        </a>
                        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil"></i> Düzenle
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Kayıt bulunamadı</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <!-- Yeni kullanıcı oluşturma linki -->
        <a href="{{ path('app_user_new') }}" class="btn btn-success mt-3">
            <i class="bi bi-plus-lg"></i> Yeni Kullanıcı Oluştur
        </a>
    </div>

    <style>
        /* Tablolar için genel stil */
        .table {
            width: 100%;
            margin-bottom: 1rem;
            background-color: #fff;
        }

        .table thead {
            background-color: #004d40; /* Başlık arka plan rengi */
            color: white; /* Başlık yazı rengi */
        }

        .table-hover tbody tr:hover {
            background-color: #f5f5f5; /* Hover sırasında arka plan rengi */
        }

        /* Buton stil düzenlemeleri */
        .btn-sm {
            padding: 0.25rem 0.5rem; /* Küçük boyutlu butonlar */
            font-size: 0.875rem;
        }

        .btn-info {
            background-color: #17a2b8;
            border-color: #17a2b8;
            color: white;
        }

        .btn-warning {
            background-color: #ffc107;
            border-color: #ffc107;
            color: black;
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
            color: white;
        }

        /* Icon ile metin arasına boşluk */
        .btn i {
            margin-right: 0.5rem;
        }

        .table thead th {
            background-color: #004d40 !important;
            color: white;
            text-align: center;
        }
    </style>
{% endblock %}
